        <div class="about-me-section__btn">
          <%= link_to "WIĘCEJ", o_mnie_path, class: "btn-cards" %>
        </div>
      </div>
      <div class="about-me-section__photo">
        <%= image_tag "grzegorz.jpg", alt: "Grzegorz_Szczeblewski" %>
      </div>
    </div>
  </div>
</section>

