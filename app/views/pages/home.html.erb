        <% end %>
      </div>
    </div>
  </div>
</section>

<!-- Bootstrap Image Carousel -->
<section>
  <div class="container">
    <div class="offices-section">
      <div class="section-titles">
        <h2>NASZE GABINETY</h2>
        <hr/>
      </div>
      <%= render 'shared/carousel' %>
    </div>
  </div>
</section>

<section class="reviews-carousel container">
  <div class="section-titles">
    <h2>OPINIE NASZYCH KLIENTÓW</h2>
    <hr/>
  </div>
  <div>
    <div id="carouselContent" class="carousel slide" data-ride="carousel">
      <div class="carousel-inner" role="listbox">
          <div class="carousel-item active text-center" id="review-carousel">
            <figure class="review-carousel">
              <%= image_tag "leaf.jpg", alt: "Grzegorz_Szczeblewski", class: "review__photo" %>
              <figcaption class="review-carousel__box">
                <blockquote class="review-carousel__text">
                   <p>Bardzo fachowa, rzetelna obsługa sesje przebiegały bardzo szybko wręcz niekiedy brakowało czasu i chciałoby się domówić kolejną godzinę. Bardzo polecam.☆☆☆☆☆ chodziłem 2 miesiące i z pewnością za jakiś czas, wrócę tam z powrotem.</p>
                </blockquote>
              </figcaption>
            </figure>
          </div>
          <% @reviews.each do |review| %>
          <div class="carousel-item text-center" id="review-carousel">
            <figure class="review-carousel">
              <%= image_tag "leaf.jpg", alt: "Grzegorz_Szczeblewski", class: "review__photo" %>
              <figcaption class="review-carousel__box">
                <blockquote class="review-carousel__text">
                  <p><%= review.content %></p>
                </blockquote>
              </figcaption>
            </figure>
          </div>
          <% end %>
      </div>
      <a class="carousel-control-prev" href="#carouselContent" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#carouselContent" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
      </a>
    </div>
  </div>
</section>


