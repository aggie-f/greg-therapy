      <div class="people__container">
        <%= link_to zespol_Donata_Grodek_path do %>
          <%= image_tag "Donata_Grodek.jpg", alt: "Donata Grodek" %>
          <div class="people__container__middle">
            <div class="people__container__middle__text">
              <p>Konsultacja Psychologiczna</p>
              <p>Pomoc w uzależnieniach</p>
              <p>Pomoc w sytuacji kryzysowej</p>
              <p>Terapia par</p>
            </div>
          </div>
          <div class="people__name">
            <h4>Donata Grodek</h4>
